<html>
    <body>
        <div class="left-side">
          <h1>Need to storage your luggage for few hours?</h1>
          <hr class="hr-light wow fadeInLeft" data-wow-delay="0.3s">
          <h5 class="small mb-3 wow fadeInLeft text-center" data-wow-delay="0.3s">Using Irish Storage you only pay â‚¬5 per day!</h5>
          <div class="text-center">
              <a class="btn btn-primary btn-lg" href="/users/sign_up" data-wow-delay="0.3s">Create account</a>
          </div> 
        </div>
        
        <div class="login-box">
        <%=image_tag("login.png",class: "logo-login") %>
        <h2>Sign In</h2>
          
            <%= form_for(:user, :url => session_path(:user)) do |f| %>
                <%= f.text_field :email, placeholder: "Enter your email", class: "form-control"%>
                <%= f.password_field :password, placeholder: "Enter your Password", class: "form-control" %>
                <%= f.label :remember_me, class: "label label-primary" %>
                <%= f.check_box :remember_me, class: "form-control" %>
                <%= f.submit 'Sign in',class: "btn btn-success" %>
                <%= link_to "Forgot your password?", new_password_path(:user) %>
            <% end %>
        </div>
    </body>
</html>
